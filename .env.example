# Restaurant Assistant Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# OpenAI Configuration (Required)
# ============================================================================
OPENAI_API_KEY=sk_your_openai_api_key_here

# ============================================================================
# Anthropic Configuration (Optional - for Claude)
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# Conversation Storage Configuration
# ============================================================================
# Options: "sqlite" (default) or "s3"
CONVERSATION_STORAGE=sqlite

# SQLite Configuration (used when CONVERSATION_STORAGE=sqlite)
SQLITE_DB_PATH=conversations.db

# S3 Configuration (used when CONVERSATION_STORAGE=s3)
# Uncomment and fill these for S3 storage
# S3_BUCKET_NAME=mi-bucket-conversaciones
# S3_REGION=us-east-1
# S3_PREFIX=conversations/

# ============================================================================
# Application Settings
# ============================================================================
DEBUG=False
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Server Configuration (if running as API)
# ============================================================================
HOST=localhost
PORT=8000
WORKERS=4

# ============================================================================
# Third-party Services (Optional)
# ============================================================================
# SendGrid for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Polygon API for market data (if used)
POLYGON_API_KEY=your_polygon_api_key_here

# ============================================================================
# AWS Credentials (if needed)
# ============================================================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ============================================================================
# Development Settings
# ============================================================================
# Only set to True in development!
MOCK_ORDERS=False
USE_FAKE_DATA=False
